@model ABCBookstore.Models.Book;
@{
    ViewData["Title"] = "Add a Book";
}

<div class="col-10">
    <h2>Add a book</h2>
    <form asp-action="AddBook" method="post">
        <div class="row">
            <div class="alert alert-danger d-none" role="alert" asp-validation-summary="All"></div>
        </div>
        <div class="form-row">
            <div class="form-group col-6">
                <label asp-for="Title">Title</label>
                <input asp-for="Title" type="text" class="form-control input-validation-error" placeholder="Book Title">
            </div>
            <div class="form-group col-6">
                <label asp-for="Authors">Authors</label>
                <input asp-for="Authors" type="text" class="form-control input-validation-error" placeholder="Author(s)">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-6">
                <label asp-for="ISBN">ISBN</label>
                <input asp-for="ISBN" type="text" class="form-control input-validation-error" placeholder="ISBN Number">
            </div>
            <div class="form-group col-6">
                <label asp-for="PublishDate">Publish Date</label>
                <input asp-for="PublishDate" type="text" class="form-control" placeholder="Publish Date">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-6">
                <label asp-for="Publisher">Publisher</label>
                <select asp-for="Publisher" asp-items="Html.GetEnumSelectList<Publisher>()" class="form-control">
                    <option selected value="">Please select</option>
                </select>
            </div>
            <div class="form-group col-6">
                <label asp-for="Category">Category</label>
                <select asp-for="Category" asp-items="Html.GetEnumSelectList<Category>()" class="form-control">
                    <option selected value="">Please select</option>
                </select>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-6">
                <label asp-for="Pages">Pages</label>
                <input asp-for="Pages" type="text" class="form-control" placeholder="Pages">
            </div>
            <div class="form-group col-6">
                <label asp-for="Price">Price</label>
                <input asp-for="Price" type="text" class="form-control" placeholder="Price">
            </div>
        </div>
        <div class="form-row">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>