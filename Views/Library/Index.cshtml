@{
    ViewData["Title"] = "Library";
}
@model IEnumerable<Book>
    
<div class="col-12">
    <div class="row">
        <a class="btn btn-success text-white" role="button" asp-action="AddBook">Add Book</a>
    </div>
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>ISBN</th>
                    <th>Publisher</th>
                    <th>Publish Date</th>
                    <th>Category</th>
                    <th>Pages</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() == 0)
                {
                    <tr>
                        <td colspan="8">No Data</td>
                    </tr>
                }
                else
                {
                    foreach (Book book in Model)
                    {
                        <tr>
                            <td>@book.Title</td>
                            <td>@book.Authors</td>
                            <td>@book.ISBN</td>
                            <td>@book.Publisher</td>
                            <td>@book.PublishDate.ToShortDateString()</td>
                            <td>@book.Category</td>
                            <td>@book.Pages</td>
                            <td>@book.Price</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>