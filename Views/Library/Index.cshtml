@{
    ViewData["Title"] = "Library";
}
@model IEnumerable<Book>
@using (Html.BeginForm("", "Library", FormMethod.Post))
{

    <p>
        <select name="type">
            <option value="0">Title</option>
            <option value="1">Category</option>
            <option value="2">Price</option>
        </select>
        <input type="text" name="searchBy" />
        <input type="submit" value="Search" />
    </p>

}


<div class="col-12">
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>ISBN</th>
                    <th>Publisher</th>
                    <th>Publish Date</th>
                    <th>Category</th>
                    <th>Pages</th>
                    <th>Price</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() == 0)
                {
                    <tr>
                        <td colspan="8">No Data</td>
                    </tr>
                }
                else
                {
                    foreach (Book book in Model)
                    {
                        <tr>
                            <td>@book.Title</td>
                            <td>@book.Authors</td>
                            <td>@book.ISBN</td>
                            <td>@book.Publisher</td>
                            <td>@book.PublishDate?.ToShortDateString()</td>
                            <td>@book.Category</td>
                            <td>@book.Pages</td>
                            <td>@book.Price</td>
                            <td>
                                <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@book.BookId">Edit</a>
                            </td>
                            <td>
                                <form asp-action="Delete" method="post">
                                    <input type="hidden" name="bookId" value="@book.BookId" />
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="10">
                        <a class="btn btn-success text-white" role="button" asp-action="AddBook">Add Book</a>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>